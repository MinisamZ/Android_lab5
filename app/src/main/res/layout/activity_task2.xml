<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Task2">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/task2editText"
            android:hint="List" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/task2editText2"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:minHeight="48dp"/>
    <Button
            android:text="Добавить в лист"
            android:layout_width="118dp"
            android:layout_height="59dp" android:id="@+id/task2button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="61dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/task2button2"
            app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Поиск"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task2button2"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/task2button" android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/task2editText2"
            android:hint="Поиск по листу" android:layout_marginTop="82dp"
            app:layout_constraintTop_toBottomOf="@+id/task2editText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/task2button2"
            app:layout_constraintHorizontal_bias="0.0" android:minHeight="48dp"/>
    <TextView
            android:text="Результат"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task2textView"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/task2editText2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task2textView2"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/task2textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>