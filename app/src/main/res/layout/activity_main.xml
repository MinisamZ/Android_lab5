<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="83dp"
            android:layout_height="53dp"
            android:text="Lab5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.104" android:textSize="34sp" android:id="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.49"/>
    <Button
            android:text="Task 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonTask1"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/buttonTask2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.492" app:layout_constraintVertical_bias="0.81"
            android:layout_marginTop="30dp" android:layout_marginBottom="8dp"/>
    <Button
            android:text="Task 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonTask2"
            app:layout_constraintTop_toBottomOf="@+id/buttonTask1"
            app:layout_constraintBottom_toTopOf="@+id/buttonTask3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.492"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"/>
    <Button
            android:text="Task 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonTask3"
            app:layout_constraintTop_toBottomOf="@+id/buttonTask2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.492"/>

</androidx.constraintlayout.widget.ConstraintLayout>